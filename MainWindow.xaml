<Window x:Class="Лабораторная_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="500" Width="350" MinHeight="500" MinWidth="350" FontSize="25">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="priviosLabel" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="30" Grid.Row="0" Grid.ColumnSpan="4"/>
        <TextBlock x:Name="textLabel" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="30" Grid.Row="1" Grid.ColumnSpan="4"/>
    </Grid>
</Window>
